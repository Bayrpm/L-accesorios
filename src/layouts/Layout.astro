---
interface Props {
  title: string;
}
const { title } = Astro.props;

import Nabvar from "../components/Nabvar.astro";

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body >

    <Nabvar />

    <slot />


  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --bg-color-light: #ff6a6a;
    --bg-color-dark: #333;
    --text-color-light: #000;
    --text-color-dark: #fff;
    --text-shadow-light: 1px -1px 0 #767676, -1px 1px 1px #9b9b9b,
      -2px 2px 1px #c1c1c1, -3px 3px 1px #c9c9c9, -4px 4px 1px #e6e6e6,
      -5px 5px 1px #efefef;
    --text-shadow-dark: 1px -1px 0 #000, -1px 1px 1px #111, -2px 2px 1px #222,
      -3px 3px 1px #333, -4px 4px 1px #444, -5px 5px 1px #555;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: var(--bg-color-light);
    background-size: 224px;
    color: var(--text-color-light);
  }

  html.dark {
    background-color: var(--bg-color-dark);
    color: var(--text-color-dark);
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

 
</style>

